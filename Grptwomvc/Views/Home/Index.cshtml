@model List<Grptwomvc.Models.Message>
@{
    ViewBag.Title = "Home Page";
}

@if (Model != null)
{
    <div class="messagebox">
       @foreach (var msg in Model)
        {
        <strong>@msg.Title - </strong><span class="messagelink">@Html.ActionLink("Read Message", "Details", "Message", new { id = msg.Id }, null)</span><br />
        }
    </div>
}

