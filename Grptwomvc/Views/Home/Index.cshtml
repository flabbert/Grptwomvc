@model List<Grptwomvc.Models.Message>
@{
    ViewBag.Title = "Home Page";
}
@if (Model != null)
{
        foreach (var msg in Model)
        {
    <h3>@msg.Title</h3>
    <div class="body-content">@msg.Body</div>
    <div class="author">@msg.Author @*just nu vil bare user id'en komma her, men flabbert kan haxxa inn en liten funksjon som gir username istället senere*@</div>
    <div class="messagelink">@Html.ActionLink("Read Message", "Details", "Message", new { id = msg.Id }, null)</div>
        }
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="http://static.giantbomb.com/uploads/original/15/153607/2554987-3034468139-Mario.png" alt="New York">
            <div class="carousel-caption">
                <h3>New York</h3>
                <p>The atmosphere in New York is lorem ipsum.</p>
            </div>
        </div>

        <div class="item">
            <img src="http://www.gamesgrabr.com/blog/wp-content/uploads/2015/07/New-Super-Mario-Bros-U_2012_06-05-12_012.jpg" alt="Chicago">
            <div class="carousel-caption">
                <h3>Chicago</h3>
                <p>Thank you, Chicago - A night we won't forget.</p>
            </div>
        </div>

        <div class="item">
            <img src="http://static.giantbomb.com/uploads/original/15/153607/2554987-3034468139-Mario.png" alt="Los Angeles">
            <div class="carousel-caption">
                <h3>LA</h3>
                <p>Even though the traffic was a mess, we had the best time.</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
